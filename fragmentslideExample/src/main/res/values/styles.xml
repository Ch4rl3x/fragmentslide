<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Dieser Style für den Dialog wird ausschließlich für die Infodialoge benutzt -->
    <style name="ToolbarInfoDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
	    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
	    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	    <item name="android:backgroundDimEnabled">false</item>
	    <item name="android:background">@null</item>
	    <item name="android:foreground">@null</item>
        <item name="android:windowBackground">@null</item>
	</style>

    <!-- ############################################################
           Separates Design zum Anpassen der EditText Felder
         ############################################################ -->
    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/textcolor</item>
    </style>
    
    <!-- ############################################################
           Separates Design zum Anpassen der RadioButton
         ############################################################ -->
    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- ############################################################
           Separates Design zum Anpassen der CheckBox Felder
         ############################################################ -->
    <style name="CheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
    </style>

    
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
	    <item name="spinBars">true</item>
	    <item name="color">@android:color/white</item>
	</style>

    <!-- ############################################################
           Theme für das Toolbar. Wird in der toolbar.xml verwendet
         ############################################################ -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    	<item name="android:textColorPrimary">@color/white</item>
	</style>
	
    <!-- ############################################################
           Das theme der Application
         ############################################################ -->
	<style name="ActionBarThemeStyle" parent="@style/ThemeOverlay.AppCompat.Light">
	    <item name="android:textColor">@color/textcolor</item>
     	<item name="colorControlNormal">@color/textcolor</item>
    	<item name="colorControlHighlight">@color/textcolor</item>
	</style>


</resources>
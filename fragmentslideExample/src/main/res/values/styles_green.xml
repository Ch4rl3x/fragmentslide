<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ############################################################
           Separates Design FÃ¼r Button
         ############################################################ -->
    <style name="Button_Green" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:width">160dip</item>
        <item name="android:background">@xml/button_green</item>
        <item name="android:textStyle">normal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme_Dialog_Green" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/MyButtonStyle_Green</item>
    </style>

    <style name="MyButtonStyle_Green" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/green</item>
    </style>
	
    <style name="ActionBarPopupStyle_Green" parent="@style/Theme.AppCompat.Light">
    	<item name="android:background">@color/white</item>
    	<item name="android:textColor">@color/green</item>
	</style>

</resources>